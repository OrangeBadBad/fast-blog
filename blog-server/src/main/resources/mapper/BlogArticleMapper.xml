<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pengzc.blog.mapper.BlogArticleMapper">

    <!-- 开启二级缓存 -->
  <!--  <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>-->

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.pengzc.blog.entity.BlogArticle">
        <id column="id" property="id" />
        <result column="content" property="content" />
        <result column="title" property="title" />
        <result column="name" property="name" />
        <result column="content_html" property="contentHtml" />
        <result column="tag_name" property="tagName" />
        <result column="category_id" property="categoryId" />
        <result column="category_name" property="categoryName" />
        <result column="user_id" property="userId" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="view_num" property="viewNum" />
        <result column="comment_num" property="commentNum" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, content, title, name, content_html, tag_name, category_id, category_name, user_id, create_time, update_time, view_num, comment_num
    </sql>

</mapper>
